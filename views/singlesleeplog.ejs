<!-- Define a function to render the sleeplog -->
<% function renderSleeplog(sleeplog) { %>
  <div class="item-details">
    <article>
      <h2>Date: <%= sleeplog.date %></h2>
      <div><%= sleeplog.hoursSlept %></div>
      <div><%= sleeplog.quality %></div>
      <div><%= sleeplog.comments %></div>
      
      
  
      <!-- Update button -->
      <form
        class="action-form"
        method="GET"
        action="/single-sleeplog/update/<%= sleeplog._id %>"
      >
        <button type="submit" class="update">update</button>
      </form>
  
      <!-- Delete button -->
      <form
        class="action-form"
        method="POST"
        action="/single-sleeplog/<%= sleeplog._id %>?_method=DELETE"
      >
        <button type="submit">delete</button>
      </form>
    </article>
  </div>
  <% } %>

    
  <% 
  function formatDate(dateString) {
      const date = new Date(dateString);
      // Format the date as desired (e.g., YYYY-MM-DD)
      const formattedDate = date.toLocaleDateString('en', { year: 'numeric', month: 'long', day: 'numeric' });
      return formatDate;
  } 
  %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: sleeplog.title }) %>
  <body>
    <%- include('partials/navbar.ejs') %>
    

    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (sleeplog) { %> <%= renderSleeplog(sleeplog) %> <% } else { %>
          <p>No sleeplog found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>